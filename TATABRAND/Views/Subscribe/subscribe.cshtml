@model List<TataPk>

<div class="container">
    <div>
        <h1>TATA</h1>
    </div>
    <div class="text-end mb-3">
        <a asp-controller="Subscribe" asp-action="Create" class="btn btn-primary text-uppercase">Create</a>
    </div>
    <hr />

    @if (Model.Count > 0)
    {
        <table id="ta">
            <thead class="table-light">
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Name</th>
                    <th class="text-center">DOB</th>
                    <th class="text-center">IMAGE</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="20%" class="text-center">@item.ID</td>
                        <td width="20%" class="text-center">@item.Name</td>
                        <td width="5%"  class="text-center">@item.EstablishYear</td>
                        <td width="20%" class="text-center">@item.Logo</td>
                        <td width="35%" class="text-center">
                            
                            <a class="btn btn-primary text-uppercase" asp-action="Detail" asp-controller="Subscribe" asp-route-id="@item.ID">Detail</a>
                        
                           <a class="btn btn-warning text-uppercase" asp-action="Edit" asp-controller="Subscribe" asp-route-id="@item.ID">Edit</a>   
                          <a class="btn btn-danger text-uppercase" asp-action="Delete" asp-controller="Subscribe" asp-route-id="@item.ID">Delete</a>   </td>
                       
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center text-uppercase text-warning">No records to show</h2>
            </div>
        </div>
    }
</div>

